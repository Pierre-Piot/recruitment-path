<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
        crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp"
        crossorigin="anonymous">
</head>

<body>


    <h2>Signup</h2>
    <div class="btn-group" role="group" aria-label="..." method="POST" id="gender">
        <button type="button" class="btn btn-default">Male</button>
        <button type="button" class="btn btn-default">Female</button>
    </div>

    <!--<form action="/signup" method="POST" id="form-container">
  <input type="radio" name="gender" value="male"> Male<br>
  <input type="radio" name="gender" value="female"> Female<br>
</form>-->
    <br><br>


   <span class="glyphicon glyphicon-user" aria-hidden="true"></span> 
   <label for="email"></label>
    <input id="email" type="text" name="email" placeholder="Email" autofocus required>
    <br><br>

    <span class="glyphicon glyphicon-lock" aria-hidden="true"></span> 
    <label for="password"></label>
    <input id="password" type="password" name="password" placeholder="Password" required>
    <% if (typeof message !== "undefined") { %>
        <div class="error-message">
            <%= message %>
        </div>
        <% } %>
    <br><br>

    <label for="age">AGE</label>
    <input id="age" type="number" min="16" max="100" name="age" placeholder="Age" required>
    <br><br>

    <% if (typeof message !== "undefined") { %>
    <div class="error-message">
    <%= message %>
    </div>
    <% } %>
    <br><br>

    
    <div class="btn-group" role="group" aria-label="..." method="POST">
    <button type="button" class="btn btn-default">Create account</button>
    </div>
    <br><br>

    <p class="account-message">Do you already have an account?</p>
    <a href="/login">
        <div class="btn-group" role="group" aria-label="..." method="POST">
        <button type="button" class="btn btn-default">Login</button>
        </div>
    </a>
    <br><br>               

    
    <a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a>


</body>