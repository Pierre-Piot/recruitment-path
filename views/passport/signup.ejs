<!-- views/auth/signup.ejs -->
<h2>Signup</h2>

<form action="/signup" method="POST" id="form-container">
  <input type="radio" name="gender" value="male"> Male<br>
  <input type="radio" name="gender" value="female"> Female<br>
  <br><br>

  <label for="email">USER</label>
  <input id="email" type="text" name="email" placeholder="Email" autofocus required>
  <br><br>

  <label for="password">PASSWORD</label>
  <input id="password" type="password" name="password" placeholder="Password"  required>
   <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>
  <br><br>

  <label for="age">AGE</label>
  <input id="age" type="number" min="16" max="100" name="age" placeholder="Age" required >
  <br><br>
  
  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>
  <br><br>
  
  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>

  <a href="/index">HOME</a>
</form>