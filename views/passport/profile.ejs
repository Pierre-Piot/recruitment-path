  <div class="container" id='containerProfile'>
    
    <div class="row">
      <div class="col-6 col-md-4">
      </div>
    
      <div class="col-6 col-md-4">
        <form class="" action="/signup" method="POST" id="signup-form">
            <h2>Fill in your profile</h2>
       
          <!--<div class="form-group row">-->
          <div class="btn-group row" role="group" aria-label="..." method="POST" id="gender" required>
              <button type="button" class="btn btn-default btn-custom">Male</button>
              <button type="button" class="btn btn-default btn custom">Female</button>
          </div>
         
          <div class="form-group row">
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              <input class="form-control" type="text" value="First Name" id="" required autofocus>
          </div>

          <div class="form-group row">
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              <input class="form-control" type="text" value="Last Name" id="">
          </div>

          <div class="form-group row">
              <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
              <input class="form-control" type="email" value="email" id="">
          </div>

          <div class="form-group row">
              <span class="glyphicon glyphicon-earphone" aria-hidden="true"></span>
              <input class="form-control" type="tel" value="phone-number" id="">
          </div>

          <div class="form-group row">
            <label for="password-input" class="col-2 col-form-label">Password</label>
              <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
              <input class="form-control" type="password" value="bananas" id="password">
          </div>



          <div class="form-group row">
            <label for="password-input" class="col-2 col-form-label">Confirm your Password</label>
              <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
              <input class="form-control" type="password" value="bananas" id="password">
          </div>

          <div class="form-group row">
              <label for="example-datetime-local-input" class="col-2 col-form-label">Birthdate</label>
              <input class="form-control" type="date" value="Birthdate" id="birthdate">
          </div>

          <div class="form-group row">
              <a href="/">
              <div class="btn-group" role="group" aria-label="..." method="POST"></div>
              <button type="submit" class="btn btn-default">Create your account</button>
              </a>
          </div>
          
           <% if (typeof message != "undefined") { %>
            <div class="error-message"><%= message %></div>
           <% } %>

          <div class="form-group row">
              <p class="account-message">Do you already have an account?</p>
              <a href="/login">
              <div class="btn-group" role="group" aria-label="..." method="POST"></div>
              <button type="button" class="btn btn-default">Login</button>
              </a>
          </div>
         
          <div class="form-group row">
              <a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a>
          </div>
    
        </form>
      </div>

      <div class="col-6 col-md-4">
      </div>

   </div>  <!--row-->

  </div>   <!--container-->