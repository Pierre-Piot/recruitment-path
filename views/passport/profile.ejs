      <div class="container profile-container">
        <div class="row">
          <div class="col-md-3">
          </div>
          <div class="col-md-6 col-centered" id="container-candidate-info">
            <div id='welcome-message'>
              <h2>Welcome, <b><%= currentUser.firstName.toUpperCase() %></b> ! </h2>
            </div>
            <div class="profile-avatar">
              <img src="<%= currentUser.avatar %>">
            </div>
            <div class="profile-information">
              <div class="profile-your-information-title">
                <h3>Your information</h3>
                <div class="profile-information-display"
                  <p><%console.log('currentUser:', currentUser) %></p>
                  <ul>
                    <p>First Name:  <%= currentUser.firstName %> </p>
                    <p>Last Name :  <%= currentUser.lastName %></p>
                    <p>Email     :  <%= currentUser.mail %></p>
                    <p>Phone     :  <%= currentUser.phone %></p>
                    <!--<p>Birthdate :  <%= currentUser.age %></p>-->
                  </ul>
                </div>
              </div>
            </div>
            <div class="profile-edit">
              <a class="btn btn-outline-primary" href="user/profile/edit" role="button"><b><em>Add your Carreer and Education<em></b></a>
            </div>
          </div>
          <div class="col-md-3">
            
          </div>
        </div>
      </div>
        
        


